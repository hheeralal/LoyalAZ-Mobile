<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:gravity="center|bottom"
        android:layout_weight="1"
        android:orientation="vertical" >
            <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:src="@drawable/lazlogo" />
        
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageButtonFindPrograms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/find_button_states" />

        <ImageView
            android:id="@+id/imageButtonFindCoupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/findcoupons_button_states" />

        <ImageView
            android:id="@+id/imageButtonScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/scan_button_states" />

    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <ImageView
            android:id="@+id/imageButtonMyPrograms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/programs_buton_states" />

        <ImageView
            android:id="@+id/imageButtonMyCoupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/coupons_button_states" />

        <ImageView
            android:id="@+id/imageButtonSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:src="@drawable/setup_button_states" />

    </LinearLayout>
    </LinearLayout>
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:gravity="center|bottom"
        android:orientation="vertical" >
        <ImageView
        android:id="@+id/imgViewAds"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    
</LinearLayout>
    
</LinearLayout>